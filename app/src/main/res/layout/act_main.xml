<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:PK20" />

                <TextView
                    android:id="@+id/device_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:PK20" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/iv_on"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:background="@drawable/on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描条码" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="运单编号："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:inputType="number"
                android:background="@drawable/bg_input_work"
                android:id="@+id/sender_odd_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="888888888"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sender_scan"
                android:layout_marginStart="@dimen/dp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:drawableEnd="@drawable/ic_scan"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长度" />

            <TextView
                android:id="@+id/tv_length"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="cm" />

            <Button
                android:id="@+id/btn_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宽度" />

            <TextView
                android:id="@+id/tv_width"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="cm" />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高度" />

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="cm" />

            <Button
                android:id="@+id/btn_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重量" />

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="kg" />
        </LinearLayout>


        <TextView
            android:textSize="@dimen/sp10"
            android:text="货物信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="实际重量："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:inputType="number|numberDecimal"
                android:background="@drawable/bg_input_work"
                android:id="@+id/quick_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:hint="实际重量"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="体积重量："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:enabled="false"
                android:background="@drawable/bg_input_work"
                android:id="@+id/quick_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="体积重量"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="货物尺寸："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:background="@drawable/bg_input_work"
                android:id="@+id/quick_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:hint="货物尺寸"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="件        数："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:inputType="number"
                android:background="@drawable/bg_input_work"
                android:text="1"
                android:id="@+id/quick_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="件数"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="包装类型："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:background="@drawable/bg_input_work"
                android:text="纸箱"
                android:id="@+id/packing_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:hint="包装类型"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="货物类型："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:background="@drawable/bg_input_work"
                android:text="服装"
                android:id="@+id/type_of_goods"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="货物类型"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <TextView
            android:textSize="@dimen/sp10"
            android:text="寄件人信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <LinearLayout
            android:minHeight="40dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="寄  件  人："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:background="@drawable/bg_input_work"
                android:id="@+id/sender_the_sender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="羊村你喜哥"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:minHeight="40dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="手机号码："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:inputType="number"
                android:background="@drawable/bg_input_work"
                android:id="@+id/sender_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="15148489963"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:minHeight="40dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="寄件公司："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:background="@drawable/bg_input_work"
                android:id="@+id/sender_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="北京无脑科技有限公司"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:minHeight="40dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="寄件地址："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:background="@drawable/bg_input_work"
                android:id="@+id/sender_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="北京市朝阳区新开路26-1-03"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <TextView
            android:textSize="@dimen/sp10"
            android:text="收件人信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:minHeight="40dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="收  件  人："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:background="@drawable/bg_input_work"
                android:id="@+id/collection_the_collection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="羊村你懒哥"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:minHeight="40dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="手机号码："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:inputType="number"
                android:background="@drawable/bg_input_work"
                android:id="@+id/collection_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="15148489963"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:minHeight="40dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="收件公司："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:background="@drawable/bg_input_work"
                android:id="@+id/collection_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="北京有仁科技有限公司"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:minHeight="40dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="收件地址："
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <EditText
                android:background="@drawable/bg_input_work"
                android:id="@+id/collection_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="北京市朝阳区新开路26-1-04"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

        </LinearLayout>


        <Button
            android:id="@+id/sender_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:text="保存上传" />



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <include layout="@layout/item_main_test" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <include layout="@layout/item_main_version" />


        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>